{
	"name": "Go Dev Container",
	"image": "mcr.microsoft.com/devcontainers/go:1.24",	
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.24"
		}
	},
	"runArgs": [
		"--privileged",
		"--network=host"
	],
	"forwardPorts": [
		7071	
	],
	"portsAttributes": {
		"7071": {
			"label": "Application",
			"onAutoForward": "notify"
		}
	},
	"postCreateCommand": "go mod download",
	"remoteUser": "root"
}
